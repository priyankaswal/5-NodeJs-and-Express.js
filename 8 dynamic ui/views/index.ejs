<%- include('partials/head')%>
  </head>
  <body class="bg-gray-100 min-h-screen">
    <%- include('partials/nav')%>
    <main>
      <div class="flex items-center justify-center min-h-screen pt-20">
        <div class="bg-white p-8 rounded-lg shadow-md max-w-sm text-center">
          <h2 class="text-3xl font-bold text-red-400 mb-4">
            Welcome to Airbnb
          </h2>
          <p class="text-gray-600 mb-6">
            Explore a variety of homes or host your own!
          </p>
          <!-- Homes List -->
          <ul class="list-disc pl-8 mt-4 text-left">
            <% homes.forEach(home => { %>
            <li class="text-gray-800 font-medium mb-2">
              <%= home.houseName %>
            </li>
            <% }) %>
          </ul>
        </div>
      </div>
    </main>
  </body>
</html>
