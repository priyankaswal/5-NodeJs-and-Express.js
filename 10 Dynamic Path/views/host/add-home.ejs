<%- include('../partials/head')%>
  </head>
  <body class="bg-gray-100 flex items-center justify-center min-h-screen">
    <%- include('../partials/nav')%>
    <div class="bg-white p-8 rounded-lg shadow-md max-w-sm w-full">
      <h1 class="text-2xl font-bold text-gray-700 mb-6 text-center">Add Your Home</h1>
      <form action="/host/add-home" method="post" class="space-y-4">
        <input
          type="text"
          name="houseName"
          placeholder="Name of your house"
          class="w-full p-3 border border-gray-300 rounded focus:outline-none focus:border-blue-500"
        />
        <input
          type="text"
          name="price"
          placeholder="Daily rent of your home"
          class="w-full p-3 border border-gray-300 rounded focus:outline-none focus:border-blue-500"
        />
        <input
          type="text"
          name="location"
          placeholder="Where is your home"
          class="w-full p-3 border border-gray-300 rounded focus:outline-none focus:border-blue-500"
        />
        <input
          type="text"
          name="rating"
          placeholder="Rating of the house"
          class="w-full p-3 border border-gray-300 rounded focus:outline-none focus:border-blue-500"
        />
        <input
          type="text"
          name="photoUrl"
          placeholder="Upload a photo"
          class="w-full p-3 border border-gray-300 rounded focus:outline-none focus:border-blue-500"
        />
        <input
          type="submit"
          value="Add Home"
          class="w-full p-3 bg-blue-500 text-white font-semibold rounded cursor-pointer hover:bg-blue-600"
        />
      </form>
    </div>
  </body>
</html>
